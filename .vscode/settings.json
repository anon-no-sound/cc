{
    // Hide generated .js files from Explorer when a .ts file with the same name exists
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    // Exclude generated .js files from search results
    "search.exclude": {
        "**/*.js": true
    },
    // Make .js files read-only to prevent accidental edits
    "files.readonlyInclude": {
        "**/*.js": true
    }
}